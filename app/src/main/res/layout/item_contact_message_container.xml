<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgProfileContactMessage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/round_rounded_very_round"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/tvContactMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tvContactMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/bg_contact_message"
        android:padding="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/imgProfileContactMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"
        />

    <TextView
        android:id="@+id/contactMessageDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvContactMessage"
        app:layout_constraintTop_toBottomOf="@id/tvContactMessage"
        />
</androidx.constraintlayout.widget.ConstraintLayout>